<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Lesson Title -->
    <TextView
        android:id="@+id/lessonTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:text="Lesson Title"/>

    <!-- Word -->
    <TextView
        android:id="@+id/wordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="4dp"/>

    <!-- Definition -->
    <TextView
        android:id="@+id/wordDefinitionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingBottom="12dp"/>

    <!-- Message 1 -->
    <TextView
        android:id="@+id/message1Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingBottom="4dp"
        android:textColor="@android:color/black"/>

    <!-- Message 2 -->
    <TextView
        android:id="@+id/message2Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingBottom="4dp"
        android:textColor="@android:color/black"/>

    <!-- Message 3 -->
    <TextView
        android:id="@+id/message3Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingBottom="16dp"
        android:textColor="@android:color/black"/>

    <!-- Next Button -->
    <Button
        android:id="@+id/nextWordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Word"/>
</LinearLayout>
